<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Plant Sales Automation Suite" verbose="1">
    
    <!-- UI Tests -->
    <test name="UI Tests">
        <parameter name="cucumber.filter.tags" value="@ui"/>
        <classes>
            <class name="com.example.runners.UiTestRunner"/>
        </classes>
    </test>
    
    <!-- API Tests -->
    <test name="API Tests">
        <parameter name="cucumber.filter.tags" value="@api"/>
        <classes>
            <class name="com.example.runners.ApiTestRunner"/>
        </classes>
    </test>
    
</suite>